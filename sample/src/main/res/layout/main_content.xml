<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/boot_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="@string/click_for_dummy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boot_layout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_record"
                style="@style/GridButton.Yellow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_record" />

            <Button
                android:id="@+id/add_app_history"
                style="@style/GridButton.Blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_app_history" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_history_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_layout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_app_history_api_dummy"
                style="@style/GridButton.Blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_app_history_api_dummy" />

            <Button
                android:id="@+id/add_app_history_gcm_dummy"
                style="@style/GridButton.Blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_app_history_gcm_dummy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shared_prefs_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_history_layout"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_shared_prefs_dummy"
                style="@style/GridButton.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_shared_prefs_dummy" />

            <Button
                android:id="@+id/add_shared_prefs_named_dummy"
                style="@style/GridButton.Green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_shared_prefs_named_dummy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shared_prefs_layout">

            <Button
                android:id="@+id/add_file_explorer_internal"
                style="@style/GridButton.Red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_file_explorer_internal" />

            <Button
                android:id="@+id/add_file_explorer_external"
                style="@style/GridButton.Red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/add_file_explorer_external" />
        </LinearLayout>
    </RelativeLayout>
</merge>