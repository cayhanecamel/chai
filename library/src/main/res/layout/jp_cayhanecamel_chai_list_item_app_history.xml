<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/jp_cayhanecamel_chai_white"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <RelativeLayout
        android:background="@drawable/jp_cayhanecamel_chai_common_item_selector_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:minHeight="92dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/jp_cayhanecamel_chai_icon_layout"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp">

            <ImageView
                android:id="@+id/jp_cayhanecamel_chai_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jp_cayhanecamel_chai_type"
            android:textColor="@drawable/jp_cayhanecamel_chai_common_item_selector_text"
            android:textSize="@dimen/jp_cayhanecamel_chai_txt_16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/jp_cayhanecamel_chai_icon_layout"
            android:layout_toEndOf="@+id/jp_cayhanecamel_chai_icon_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/jp_cayhanecamel_chai_common_item_selector_text"
            android:textSize="@dimen/jp_cayhanecamel_chai_txt_24sp"
            android:id="@+id/jp_cayhanecamel_chai_name"
            android:layout_below="@id/jp_cayhanecamel_chai_type"
            android:layout_alignLeft="@id/jp_cayhanecamel_chai_type"
            android:layout_alignStart="@id/jp_cayhanecamel_chai_type"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/jp_cayhanecamel_chai_common_item_selector_text"
            android:textSize="@dimen/jp_cayhanecamel_chai_txt_16sp"
            android:id="@+id/jp_cayhanecamel_chai_createdAt"
            android:layout_below="@+id/jp_cayhanecamel_chai_name"
            android:layout_alignLeft="@+id/jp_cayhanecamel_chai_icon_layout"
            android:layout_alignStart="@+id/jp_cayhanecamel_chai_icon_layout"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/jp_cayhanecamel_chai_common_item_selector_text"
            android:textSize="@dimen/jp_cayhanecamel_chai_txt_16sp"
            android:id="@+id/jp_cayhanecamel_chai_content"
            android:layout_below="@+id/jp_cayhanecamel_chai_createdAt"
            android:layout_alignLeft="@+id/jp_cayhanecamel_chai_icon_layout"
            android:layout_alignStart="@+id/jp_cayhanecamel_chai_icon_layout"
            android:ellipsize="end"
            android:lines="2"/>


    </RelativeLayout>

    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/jp_cayhanecamel_chai_divider"
        android:layout_height="1dp"
        android:layout_width="wrap_content"
        style="@style/jp_cayhanecamel_chai_divider"/>

</LinearLayout>


