<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
             android:background="@color/jp_cayhanecamel_champaca_white"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/jp_cayhanecamel_champaca_scroll"
        android:descendantFocusability="blocksDescendants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/jp_cayhanecamel_champaca_white"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_gravity="right|bottom"
        android:id="@+id/jp_cayhanecamel_champaca_multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/jp_cayhanecamel_champaca_white"
        fab:fab_addButtonColorPressed="@color/jp_cayhanecamel_champaca_white_pressed"
        fab:fab_addButtonPlusIconColor="@color/jp_cayhanecamel_champaca_half_black"
        fab:fab_labelStyle="@style/jp_cayhanecamel_champaca_menu_labels_style"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/jp_cayhanecamel_champaca_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/jp_cayhanecamel_champaca_ic_export"
            fab:fab_colorNormal="@color/jp_cayhanecamel_champaca_white"
            fab:fab_title="@string/jp_cayhanecamel_champaca_export"
            fab:fab_colorPressed="@color/jp_cayhanecamel_champaca_white_pressed"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</FrameLayout>