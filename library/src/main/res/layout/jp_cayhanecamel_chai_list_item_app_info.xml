<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/jp_cayhanecamel_chai_common_item_selector_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:orientation="horizontal"
        android:minHeight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jp_cayhanecamel_chai_title"
            style="@style/jp_cayhanecamel_chai_txt_title"
            android:textColor="@drawable/jp_cayhanecamel_chai_common_item_selector_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="14dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/jp_cayhanecamel_chai_value"
            style="@style/jp_cayhanecamel_chai_txt_value"
            android:textColor="@drawable/jp_cayhanecamel_chai_common_item_selector_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </LinearLayout>

    <View
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:id="@+id/jp_cayhanecamel_chai_divider"
        android:layout_height="1dp"
        android:layout_width="wrap_content"
        style="@style/jp_cayhanecamel_chai_divider"/>

</LinearLayout>


