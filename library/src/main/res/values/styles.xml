        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>


    <style name="jp_cayhanecamel_chai_page_title">
        <item name="android:textSize">@dimen/jp_cayhanecamel_chai_txt_32sp</item>
